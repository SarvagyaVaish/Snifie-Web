<div class="span8 offset2 add-top-margin well">
  <div class="row">

    <div class="span5">
      <div class="page-header event-title">
        <h1><%= @event.name %></h1>
      </div>
      <div>
        <%= @event.description %>
      </div>
      <hr />

      <h3>
        <div>
          <i class="icon-time"></i>
          <%= l @event.start_time, :format => "%I:%M %p" %>
        </div>
        <div>
          <i class="icon-calendar"></i>
          <%= l @event.start_time, :format => "%A, %e %B" %>
        </div>
        <br />
        <div>
          <i class="icon-map-marker"></i>
          <%= Venue.find(@event.venue_id).name %>
        </div>
      </h3>
    </div>

    <div class="span3">
      <div>
        <%= image_tag @event.image_url(:thumb).to_s %>
      </div>
      <hr />
      <div>
        <h4><i class="icon-share-alt"></i><%= link_to " Visit Source Website", @event.link %></h4>
      </div>
    </div>
  </div>

  <br />
  <br />

  <div class="row">
    <div class="span8">
      <%= link_to "Back To List", events_path, :class => 'btn pull-right'  %>
    </div>
  </div>
</div>

